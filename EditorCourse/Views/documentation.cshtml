@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<Documentation>
@{
    Layout = "SubMaster.cshtml";



    //fetch nodes
    var products = CurrentPage.Site().FirstChild("products").Children("landingPage").Where("Visible");
}



            @Umbraco.Field("bodyText")


            @if (products.Any())
            {
                <hr />
                <h4>Documentation Applies to Products:</h4>

                <ul>
                    @foreach (var landingPage in products)
                    {
                        <li><a href="@landingPage.Url">@landingPage.Name</a></li>
                    }
                </ul>
            }


            @if (!String.IsNullOrEmpty(Model.Content.Images))
            {
                <h4>Documentation media:</h4>

                foreach (var image in Umbraco.TypedMedia(Model.Content.Images).Children)
                {
                    <img src="@image.GetCropUrl("thumb")" alt="..." class="img-thumbnail">
                }
            }


       
        

           

       
    

    
